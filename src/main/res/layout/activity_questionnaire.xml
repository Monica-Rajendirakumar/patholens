<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medical Questionnaire"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="20dp"/>

        <!-- Primary Concern -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What are you experiencing?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34495E"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPrimaryConcern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Describe your symptoms"
                android:minLines="3"
                android:gravity="top|start"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Location Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Where are the sores/blisters located in your mouth?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34495E"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select all that apply:"
            android:textSize="14sp"
            android:textColor="#7F8C8D"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

        <CheckBox
            android:id="@+id/cbInnerCheeks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inner cheeks"
            android:textSize="15sp"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/cbRoofOfMouth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roof of the mouth"
            android:textSize="15sp"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/cbInsideOfLips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inside of the lips"
            android:textSize="15sp"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/cbTongue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tongue"
            android:textSize="15sp"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/cbGums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gums"
            android:textSize="15sp"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/cbFloorOfMouth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Floor of the mouth"
            android:textSize="15sp"
            android:padding="8dp"/>

        <!-- Other Areas Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Other Areas"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34495E"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:id="@+id/cbOtherAreas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sores are present in other areas (skin, scalp, etc.)"
            android:textSize="15sp"
            android:padding="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOtherAreasSpecify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Specify where (e.g., face, arms, back)"
                android:enabled="false"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- When Started -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When did the sores first appear?"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34495E"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etWhenStarted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., 2 weeks ago, last month"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Symptoms Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symptoms"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34495E"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Painful sores"
                android:textSize="15sp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchPainfulSores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bleeding easily"
                android:textSize="15sp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchBleedingEasily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Difficulty eating"
                android:textSize="15sp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchDifficultyEating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Difficulty swallowing"
                android:textSize="15sp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchDifficultySwallowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etOtherSymptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other symptoms (if any)"
                android:minLines="2"
                android:gravity="top|start"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nikolsky's Sign -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nikolsky's Sign (if mentioned in medical report)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34495E"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <RadioGroup
            android:id="@+id/rgNikolskySign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbNikolskyNotMentioned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not mentioned / Don't know"
                android:textSize="15sp"
                android:padding="8dp"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbNikolskyPositive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Positive"
                android:textSize="15sp"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/rbNikolskyNegative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Negative"
                android:textSize="15sp"
                android:padding="8dp"/>
        </RadioGroup>

        <!-- Medical History Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medical History"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#34495E"
            android:layout_marginTop="20dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etMedicalConditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Any medical conditions? (e.g., diabetes, hypertension)"
                android:minLines="2"
                android:gravity="top|start"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCurrentMedications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current medications (if any)"
                android:minLines="2"
                android:gravity="top|start"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAllergies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Any allergies? (medications, food, etc.)"
                android:minLines="2"
                android:gravity="top|start"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:text="Next: Upload Images"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#3498DB"/>

    </LinearLayout>
</ScrollView>